<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fragment_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context=".Calculator.Calculator">

    <Button
        android:id="@+id/back_calculator"
        android:layout_width = "100dp"
        android:layout_height = "50dp"
        android:layout_marginStart = "5dp"
        android:layout_marginTop = "5dp"
        android:layout_marginEnd = "5dp"
        android:layout_marginBottom = "5dp"
        android:text = "@string/Button_back"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textSize = "13sp" />

    <TextView
        android:layout_marginStart = "5dp"
        android:layout_marginTop = "5dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/text_stroke"
        tools:ignore="RelativeOverlap" />

    <Button
        style="@style/calc_button"
        android:id="@+id/number_zero"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="625dp"
        android:text="@string/Button_zero" />

    <Button
        android:id="@+id/number_one"
        style="@style/calc_button"
        android:layout_above="@id/action_sin"
        android:layout_marginBottom="-625dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="575dp"
        android:text="@string/Button_one" />

    <Button
        android:id="@+id/number_two"
        style="@style/calc_button"
        android:layout_above="@+id/number_zero"
        android:layout_marginStart="125dp"
        android:layout_marginTop="575dp"
        android:layout_marginBottom="-625dp"
        android:text="@string/Button_two" />

    <Button
        style="@style/calc_button"
        android:id="@+id/number_three"
        android:layout_above="@+id/action_cos"
        android:layout_marginBottom="-625dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="575dp"
        android:text="@string/Button_three" />

    <Button
        style="@style/calc_button"
        android:id="@+id/number_four"
        android:layout_above="@+id/number_one"
        android:layout_marginBottom="-575dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="525dp"
        android:text="@string/Button_four" />

    <Button
        style="@style/calc_button"
        android:id="@+id/number_five"
        android:layout_above="@+id/number_two"
        android:layout_marginBottom="-575dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="525dp"
        android:text="@string/Button_five" />

    <Button
        style="@style/calc_button"
        android:id="@+id/number_six"
        android:layout_above="@+id/number_two"
        android:layout_marginBottom="-575dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="525dp"
        android:text="@string/Button_six" />


    <Button
        android:id="@+id/number_seven"
        style="@style/calc_button"
        android:layout_above="@+id/number_four"
        android:layout_marginStart="50dp"
        android:layout_marginTop="475dp"
        android:layout_marginBottom="-525dp"
        android:text="@string/Button_seven" />

    <Button
        style="@style/calc_button"
        android:id="@+id/number_eight"
        android:layout_above="@+id/number_two"
        android:layout_marginBottom="-525dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="475dp"
        android:text="@string/Button_eight" />

    <Button
        style="@style/calc_button"
        android:id="@+id/number_nine"
        android:layout_above="@+id/number_two"
        android:layout_marginBottom="-525dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="475dp"
        android:text="@string/Button_nine" />

    <ImageButton
        android:id="@+id/delete_one"
        style="@style/action_button"
        android:layout_above="@+id/number_two"
        android:layout_marginStart="125dp"
        android:layout_marginTop="425dp"
        android:layout_marginBottom="-475dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/Button_delete_one" />

    <Button
        android:id="@+id/delete_all"
        style="@style/action_button"
        android:layout_above="@+id/number_seven"
        android:layout_marginStart="50dp"
        android:layout_marginTop="425dp"
        android:layout_marginBottom="-475dp"
        android:text="@string/Button_delete_all" />

    <Button
        android:id="@+id/action_plus"
        style="@style/action_button"
        android:layout_above="@+id/action_minus"
        android:layout_marginStart="275dp"
        android:layout_marginTop="525dp"
        android:layout_marginBottom="-575dp"
        android:text="@string/Button_plus" />
    <Button
        style="@style/action_button"
        android:id="@+id/action_minus"
        android:layout_above="@+id/equal"
        android:layout_marginBottom="-625dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="575dp"
        android:text="@string/Button_minus" />

    <Button
        android:id="@+id/action_multiplication"
        style="@style/action_button"
        android:layout_above="@+id/action_plus"
        android:layout_marginStart="275dp"
        android:layout_marginTop="475dp"
        android:layout_marginBottom="-525dp"
        android:text="@string/Button_multiplication" />

    <Button
        android:id="@+id/action_division"
        style="@style/action_button"
        android:layout_above="@+id/action_multiplication"
        android:layout_marginStart="275dp"
        android:layout_marginTop="425dp"
        android:layout_marginBottom="-475dp"
        android:text="@string/Button_division" />

    <Button
        android:id="@+id/action_sin"
        style="@style/action_button"
        android:layout_width="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="625dp"
        android:text="@string/sin" />

    <Button
        android:id="@+id/action_cos"
        style="@style/action_button"
        android:layout_width="73dp"
        android:layout_alignParentBottom = "true"
        android:layout_marginStart="338dp"
        android:layout_marginTop="625dp"
        android:text="@string/cos" />

    <Button
        android:id="@+id/action_per_cent"
        style="@style/action_button"
        android:layout_above = "@id/number_nine"
        android:layout_marginStart="200dp"
        android:layout_marginTop="425dp"
        android:layout_marginBottom="-475dp"
        android:text="@string/Button_percent" />

    <Button
        android:id="@+id/equal"
        style="@style/calc_button"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="275dp"
        android:layout_marginTop="625dp"
        android:layout_width = "55dp"
        android:layout_height = "50dp"
        android:textSize = "15sp"
        android:textColor = "@color/white"
        android:backgroundTint = "@color/orange"
        android:text="@string/Button_equal" />

    <Button
        android:id="@+id/coma"
        style="@style/calc_button"
        android:layout_width="60dp"
        android:layout_alignParentBottom = "true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="625dp"
        android:text="@string/coma" />

    <TextView
        android:id="@+id/paradigm"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="bottom|right"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="90dp"
        android:layout_alignParentEnd = "true"
        tools:ignore="RtlHardcoded" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentEnd = "true"
        android:fillViewport="true"
        android:scrollbars="vertical"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:textSize="18sp"
            android:textColor="@color/gray"
            tools:ignore="RtlHardcoded" />
    </ScrollView>

</RelativeLayout>